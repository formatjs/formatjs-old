{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.tsbuildinfo": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "test262/**": true,
        "**/test_artifacts/**": true,
        "**/*.map": true,
        "**/*.d.ts.map": true,
    },
    "json.schemas": [
        {"fileMatch": ["tsconfig.*.json"], "url": "http://json.schemastore.org/tsconfig"},
    ]
}
