{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "rootDir": "src",
        "noUnusedLocals": true,
        "sourceMap": true,
        "preserveConstEnums": false,
        "types": [
            "eslint",
            "babel__core",
            "babel__generator",
            "babel__template",
            "babel__traverse",
            "benchmark",
            "chai",
            "fs-extra",
            "istanbul-lib-coverage",
            "istanbul-lib-report",
            "istanbul-reports",
            // Don't include mocha here
            "jest",
            "node",
            "resolve",
            "stack-utils",
            "yargs"
        ]
    },
    "include": ["src/**/*.ts"],
    "references": [{"path": "../intl-messageformat-parser"}]
}
