{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        // Targeting node >= 8
        "target": "es2017",
        "outDir": "lib",
        "rootDir": "src",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "babel__core",
            "babel__generator",
            "babel__template",
            "babel__traverse",
            "benchmark",
            "chai",
            "estree",
            "fs-extra",
            "istanbul-lib-coverage",
            "istanbul-lib-report",
            "istanbul-reports",
            // Don't include mocha here
            "jest",
            "node",
            "resolve",
            "stack-utils",
            "yargs"
        ]
    },
    "include": ["src/**/*.ts"],
}
